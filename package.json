{
	"name": "@everget/typeof",
	"version": "3.0.0",
	"description": "A smart typeof operator replacement and robust checker",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/everget/typeOf.git"
	},
	"keywords": [
		"type",
		"detect",
		"typeof"
	],
	"author": "Alex Orekhov <alex.everget161@gmail.com> (https://github.com/everget)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/everget/typeOf/issues"
	},
	"homepage": "https://github.com/everget/typeOf#readme",
	"scripts": {
		"dev": "vitest run",
		"format": "prettier \"src/**/*.ts\" --write --ignore-unknown",
		"lint": "tsc && eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"release": "pnpm run build && changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@types/node": "^20.11.19",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"@vitest/coverage-v8": "^1.3.0",
		"eslint": "^8.56.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.1.0",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"vitest": "^1.3.0"
	}
}
